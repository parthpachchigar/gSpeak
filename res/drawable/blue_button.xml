<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true">
    <shape>
      <solid
          android:color="#B4CDCD" />
      <stroke
          android:width="1dp"
          android:color="#E0EEEE" />
      <corners
          android:radius="3dp" />
      <padding
          android:left="5dp"
          android:top="5dp"
          android:right="5dp"
          android:bottom="5dp" />
    </shape>
  </item>
  <item>
  <shape>        
  <gradient
          android:startColor="#E0EEEE"
          android:endColor="#B0E2FF"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#B4CDCD" />
      <corners
          android:radius="3dp" />
      <padding
          android:left="5dp"
          android:top="5dp"
          android:right="5dp"
          android:bottom="5dp" />
    </shape>
  </item>
</selector>
